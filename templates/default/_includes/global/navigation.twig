<!-- Desktop Navigation -->
<div class="grid-x align-justify navigation" id="swup-header">

  <div class="small-10 cell">
    <button class="white text-uppercase show-for-small-only" aria-label="Navigation" data-toggle="overlayNavigation">
    {% if bodyClass == "project" %}
    {{ entry.title }} <div class="dark-gray">{{ entry.client }}</div>
    {% elseif bodyClass == "category" %}
    {{ siteName }} <div class="dark-gray">{{ category.title }}</div>
    {% elseif bodyClass == "contact" %}
    {{ siteName }} <div class="dark-gray">{{ entry.title }}</div>
    {% else %}
    {{ siteName }} <div class="dark-gray">Cinematographer</div>{% endif %}
    </button>
    <button class="white text-uppercase show-for-medium" aria-label="Navigation" data-toggle="overlayNavigation">
    {% if bodyClass == "project" %}
    {{ entry.title }} <span class="dark-gray padding-left">{{ entry.client }}</span>
    {% elseif bodyClass == "category" %}
    {{ siteName }} <span class="dark-gray padding-left">{{ category.title }}</span>
    {% elseif bodyClass == "contact" %}
    {{ siteName }} <span class="dark-gray padding-left">{{ entry.title }}</span>
    {% else %}
    {{ siteName }} <span class="dark-gray padding-left">Cinematographer</span>{% endif %}
    </button>
  </div>

  <div class="shrink cell">
    <button class="white text-uppercase" aria-label="Navigation" data-toggle="overlayNavigation">Menu</button>
  </div>

</div>
<!-- End Desktop Navigation -->