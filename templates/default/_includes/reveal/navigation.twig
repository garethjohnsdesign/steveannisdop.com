<nav class="full reveal tertiary-background-color" id="overlayNavigation" data-reveal data-animation-in="fade-in" data-animation-out="fade-out">
  <div class="grid-x grid-padding-x grid-padding-y align-center-middle" style="height: 100%">
    <div class="shrink cell text-center">

      <ul class="vertical menu text-uppercase sans-bold h4">
        {% nav category in craft.categories.group('typeOfProject').all() %}
          <li>
           <a href="{{ category.url }}" class="" data-toggle="overlayNavigation hamburger">{{ category.title }}</a>
          </li>
        {% endnav %}
        <li><a href="/about" data-toggle="overlayNavigation hamburger">About</a></li>
        <li><a href="/contact" data-toggle="overlayNavigation hamburger">Contact</a></li>
      </ul>
  
      <div class="shrink cell text-center">
       <ul class="menu align-center">
          {% for block in socials.socials.all() %}
          {% switch block.type %}
            {% case "instagram" %}
              <li><a href="{{block.socialLink}}" target="_blank"><svg class="icon icon-instagram"><use xlink:href="/assets/icons/symbol-defs.svg#icon-instagram"></use></svg></a></li>
            {% case "vimeo" %}
              <li><a href="{{block.socialLink}}" target="_blank"><svg class="icon icon-vimeo"><use xlink:href="/assets/icons/symbol-defs.svg#icon-vimeo"></use></svg></a></li>
          {% endswitch %}
          {% endfor %}
        </ul>
      </div>

    </div>
  </div>
</nav>