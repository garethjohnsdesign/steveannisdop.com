{% set bodyClass = 'contact' %}

{% if entry.seoTitle | length %}
{% set seoTitle = entry.seoTitle %}
{% else %}
{% set seoTitle = entry.title %}
{% endif %}

{% if entry.seoDescription | length %}
{% set seoDescription = entry.seoDescription %}
{% endif %}

{% extends "_layouts/site" %}

{% block navigation %}
{% include "_includes/global/navigation" %}
{% endblock %}


{% block main %}

<div class="grid-container">

    {% for region in entry.regions.all()  %}
    <div class="grid-x grid-padding-x grid-padding-y align-center">

      <div class="small-12 medium-3 cell">
        <div class="dark-gray">{{region.header}}</div>
        {% if region.company|length %}
          {% for company in region.company %}
            <div class="margin-top-1"><a href="{{ company.link }}">{{ company.company }}</a></div>
          {% endfor %}
        {% endif %}
      </div>
      <div class="small-12 medium-9 cell">

        <div class="grid-x grid-padding-x grid-padding-y">
        {% if region.contact|length %}
          {% for contact in region.contact %}
          <div class="cell medium-6 large-4">
            {% if contact.department|length %}<div class="dark-gray">{{ contact.department }}</div>{% endif %}
            <div>{{ contact.name }}</div>
            <a href="mailto:{{ contact.email }}">{{ contact.email }}</a>
          </div>
          {% endfor %}
        {% endif %}
        </div>

      </div>
    </div>
    {% endfor %}
    
    <!-- Terms and Privacy -->
    <div class="grid-x grid-padding-x grid-padding-y align-justify">
      <div class="shrink cell">
        <ul class="menu simple dark-gray">
         {% for block in socials.socials.all() %}
          {% switch block.type %}
            {% case "instagram" %}
              <li><a href="{{block.socialLink}}" target="_blank"><svg class="icon icon-instagram"><use xlink:href="/assets/icons/symbol-defs.svg#icon-instagram"></use></svg></a></li>
            {% case "vimeo" %}
              <li><a href="{{block.socialLink}}" target="_blank"><svg class="icon icon-vimeo"><use xlink:href="/assets/icons/symbol-defs.svg#icon-vimeo"></use></svg></a></li>
          {% endswitch %}
          {% endfor %}
         <li><a href="/terms">Terms</a></li>
         <li><a href="/privacy-policy">Privacy</a></li>
         <li><a href="https://www.garethjohnsdesign.com" class="dark-gray">Site by Reformation</a></li>
        </ul>
      </div>
    </div>
    <!-- End Terms and Privacy -->

</div>
{% endblock %}


{% block footer %}
{% include "_includes/global/footer" %}
{% endblock %}